// 0) Minimal "styled" shim for MUI styles â€” returns a passthrough component
const styledShim =
  (Tag: any) =>
  (_styles?: any) =>
  (props: any) =>
    <Tag {...props} />;

// If your component imports from '@mui/material/styles'
jest.mock('@mui/material/styles', () => ({
  __esModule: true,
  styled: styledShim,
  ThemeProvider: ({ children }: any) => <>{children}</>,
  createTheme: () => ({}),
  useTheme: () => ({}),
}));

// If your component (or transitive code) imports 'styled' from '@mui/material'
jest.mock('@mui/material', () => {
  const actual = jest.requireActual('@mui/material');
  return {
    __esModule: true,
    ...actual,             // keep anything else you already mocked or need
    styled: styledShim,    // <- add this
  };
