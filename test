const handleInputChange = (
  category: keyof Categorized,
  index: number,
  value: string
) => {
  const updatedDetails: Categorized = { ...categorizedArtRequestDetails };

  // update correct item
  updatedDetails[category][index].value = value;

  // sync local state
  setCategorizedArtRequestDetails(updatedDetails);

  // flatten for backend
  const flattenedDetails: ArtDetail[] = Object.values(updatedDetails).flat();
  setAdditionalDetails(flattenedDetails);

  // sync formData for backend save
  setFormData({
    ...formData,
    applicationDetails: {
      ...formData.applicationDetails,
      artRequestDetails: flattenedDetails,
    },
  });
};
