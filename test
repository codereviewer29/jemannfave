useEffect(() => {
  if (!filteredChartData.length) return;

  // total points to plot
  const count =
    summaryDataOfChart2?.summaryDataOfChart?.dayCount ??
    filteredChartData.length;

  // 1) API-provided start date (preferred)
  const apiStart = summaryDataOfChart2?.summaryDataOfChart?.startDate;

  // 2) Fallback: derive from the first data item (adjust the field name!)
  const dataStart = filteredChartData?.[0]?.date; // <-- if your field is 'day' or 'timestamp', change it here

  const startDate = apiStart ?? dataStart;
  if (!count || !startDate) return;

  setChartLabels(generateDateLabels(startDate, count));
}, [filteredChartData, summaryDataOfChart2]);
