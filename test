const generateDateLabels = (startDate: string | Date, days: number) => {
  const start = new Date(startDate);
  return Array.from({ length: days }, (_, i) => {
    const date = new Date(start);
    date.setDate(start.getDate() + i); // go forward from start date
    return date.toLocaleDateString('en-US', { month: 'short', day: 'numeric' });
  });
};

useEffect(() => {
  if (!filteredChartData.length) return;

  const count = summaryDataOfChart2?.summaryDataOfChart?.dayCount;
  const startDate = summaryDataOfChart2?.summaryDataOfChart?.startDate; // <-- Make sure API sends this
  
  if (!count || !startDate) return;

  const labels = generateDateLabels(startDate, count);
  setChartLabels(labels);
}, [filteredChartData]);
